{
  "compilerOptions": {
    "target": "es2022", // Or `esnext` for the very latest features
    "module": "NodeNext", // Crucial for Node.js ESM compatibility
    "moduleResolution": "NodeNext", // Best for Node.js ESM
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src", // Ensure this is set correctly
    "lib": ["es2022", "dom"] // Update lib to match target, add 'dom' if needed for any browser-like types
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
