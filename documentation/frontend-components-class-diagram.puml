    class BuildDataModel {
        +dataSource: IDataSource
        +tables: TableInfo[]
        +relationships: Relationship[]
        --
        +loadTables(): Promise<void>
        +defineRelationships(): void
        +generateSQL(): string
        +saveDataModel(): Promise<void>
    }

    class DataModelBuilder {
        +canvas: CanvasElement
        +entities: EntityNode[]
